<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".ui.perfil.PerfilFragment">

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintVertical_bias="0.633" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:background="#436B1C"
        android:backgroundTint="#436B1C"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imUser"
            android:layout_width="153dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/avatar" />


        <TextView
            android:id="@+id/tvNombreuser"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Jane Doe"
            android:textAlignment="center"
            android:textColor="#EBE7E7"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jane.doe@gmail.com"
            android:textAlignment="center"
            android:textColor="#EBE7E7"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvNtrueques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textAlignment="center"
                android:textColor="#426A1D"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trueques"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvValoracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   4.5⭐"
                android:textAlignment="center"
                android:textColor="#426A1D"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valoración"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvNanuncios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textAlignment="center"
                android:textColor="#426A1D"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anuncios"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="323dp"
        android:layout_height="32dp"
        android:text="Parámetros Generales"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.776" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="226dp"
        android:layout_marginBottom="84dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/lyEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="43dp"
                android:layout_height="32dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/iconoperfil" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:text="Editar Perfil"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:rotation="-90"
                android:scaleType="centerInside"
                android:src="@drawable/flecha" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:id="@+id/lyConfig"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="32dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/configuracion" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:text="Configuración"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:rotation="-90"
                android:scaleType="centerInside"
                android:src="@drawable/flecha" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:id="@+id/lyPrivacidad"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="43dp"
                android:layout_height="32dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/privacidad"
                android:tint="#000000" />

            <TextView
                android:id="@+id/verificaryseguridad"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:text="Privacidad"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:rotation="-90"
                android:scaleType="centerInside"
                android:src="@drawable/flecha" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:id="@+id/lyAyuda"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="43dp"
                android:layout_height="32dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/interrogar" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:text="Ayuda"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:rotation="-90"
                android:scaleType="centerInside"
                android:src="@drawable/flecha" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintVertical_bias="0.633" />

</androidx.constraintlayout.widget.ConstraintLayout>